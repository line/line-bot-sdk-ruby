{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "automerge": true,
  "platformAutomerge": true,
  "git-submodules": {
    "enabled": true
  },
  "labels": [
    "dependency upgrade"
  ],
  "packageRules": [
    {
      "labels": [
        "dependency upgrade",
        "line-openapi-update"
      ],
      "matchPackageNames": [
        "/^line-openapi$/"
      ]
    }
  ]
}
